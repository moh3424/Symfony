	{% extends 'layout.html.twig' %}

		{%   block content  %}

        <h1>{{title}}</h1> 
        

         {% for msg in app.session.flashbag.get('success') %}
         <span class="alert alert-success">{{ msg }}</span>
         {% endfor%}

		 {% for msg in app.session.flashbag.get('error') %}
         <span class="alert alert-danger">{{ msg }}</span>
         {% endfor%}


		<form action="{{ path('connexion')}}" method= "post">
			<center>

				<div class="form-group">
					<label>Pseudo</label>
					<input type="text" name="_username" value="{{lastusername}}" class="form-control">
				</div>
				<div class="form-group">
					<label>Password</label>
					<input type="password" name="_password" class="form-control">
				</div>
	
				<div class="form-group">
					<button type="submit" class="btn btn-primary">Connexion</button>
				</div>
			</center>
		</form>

